{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es5",

    /* added for angular 2 */
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "files": [
    "main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}